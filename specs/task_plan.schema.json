{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "task_id": {
            "type": "string"
        },
        "title": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "dependencies": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "acceptance_criteria": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "status": {
            "type": "string",
            "enum": [
                "pending",
                "in_progress",
                "completed",
                "blocked"
            ]
        }
    }
}